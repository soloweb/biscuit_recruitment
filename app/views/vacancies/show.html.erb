<%
meta :title => @vacancy.title + " | Biscuit Recruitment",
     :description => sanitize(@vacancy.description[0,180])
%>

<div class="wrapper">
  <div class="job-page">
    <h1 class="page-title"><%= @vacancy.title %></h1>
    <div class="job">
      <h4>Vacancy Description:</h4>
      <div class="social">
        share job:
        <div class="ss-icon ss-social-regular">
          <a href="mailto:?subject=I wanted you to see this vacancy at Biscuit Recruitment&amp;body=Job Vacancy: <%= vacancy_url(@vacancy) %>">&#x2709;</a>
          <a href="http://www.linkedin.com/shareArticle?mini=true&amp;url=<%= vacancy_url(@vacancy) %>&amp;title=<%= URI.encode(@vacancy.title) %>&amp;summary=<%= (@vacancy.description[0, 100]) %>&amp;source=<%= request.protocol + request.host %>">&#xF612;</a>
          <a href="https://twitter.com/share?url=<%= vacancy_url(@vacancy) %>">&#xF611;</a>
          <a href="https://www.facebook.com/sharer/sharer.php?u=<%= vacancy_url(@vacancy) %>&amp;t=<%= @vacancy.title %>">&#xF610;</a>
        </div>

      </div>

      <div class="job-desc">
        <%= sanitize @vacancy.description %>
      </div>

      <div class="job-info">
        <div class="job-attr">
          <h5>Duration</h5>
          <p><%= @vacancy.vacancy_type %></p>
        </div>

        <div class="job-attr">
          <h5>Location</h5>
          <p><%= @vacancy.location %></p>
        </div>

        <div class="job-attr">
          <h5>Salary</h5>
          <p><%= @vacancy.salary_information %></p>
        </div>
      </div>

      <a href='<%= vacancy_path(@vacancy) %>' class="arrow-btn">
        Apply
        <span class='ss-icon ss-gizmo arrow'>&#x270E;</span>
      </a>
    </div>
  </div>
  <%= render 'shared/sidebar' %>
</div>