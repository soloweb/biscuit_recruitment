<%
meta :description => ""
%>
<div class="header-image">
  
</div>
<div class="wrapper homepage">
  <div class="col1">
    <div class="title-block">
      Biscuit Recruitment
      London
      the 'can do' agency partner
    </div>

    <% HomepageBlock.order('position').each do |homepage_block| %>
      <div class="block <%= homepage_block.alignment_class %>" style="background: url('<%= homepage_block.image.url %>');">
        <% if homepage_block.title? %>
          <h3><%= homepage_block.title %></h3>
        <% end %>

        <% if homepage_block.text? %>
          <p><%= homepage_block.text %></p>
        <% end %>
      </div>
    <% end %>

  </div>
  <div class="col2 sidebar">
    <div class="search">
      <h3>Search</h3>
      <form action="" class='vacancy_search'>
        <label for="category">Job Category</label>
        <div class="styled-select">
          <select name="category" id="category">
            <option value="">Construction</option>
            <option value="">Education</option>
          </select>
        </div>
        <label for="category">Vacancy Type</label>
        <div class="radio-buttons">
          <input type="radio" name="vacancy_type" value="Perm" >
          Perm
          <input type="radio" name="vacancy_type" value="Temp">
          Temp
          <input type="radio" name="vacancy_type" value="Contract">
          Contract
        </div>

        <input type='submit' value="Search Jobs">
      </form>
    </div>
    <h2>Latest Jobs</h2>
    <div class="latest-jobs">
      <% 4.times do %>
        <div class="job">
          <h4>Asset Manager</h4>

          <h5>Duration</h5>
          <p>Permanent</p>

          <h5>Location</h5>
          <p>London</p>

          <h5>Salary</h5>
          <p>Â£50000 - 55000</p>
          <div class="arrow-btn">
            More Info
            <span class='ss-icon ss-gizmo arrow'>&#x27A1;</span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>