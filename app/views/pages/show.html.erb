<%
meta :title => @page.title + " | C&C Search",
     :description => @page.meta_description,
     :keywords => @page.meta_keywords
%>

<div class="header-image <%= @page.header_background + "-slider-bg" if @page.header_background.present? %> page-header d-all t-all m-all">
</div>
<div class="page">
  <div class="wrapper">
    <div class="content d1-d8">
      <h1><%= @page.title %></h1>
      <%= sanitize @page.content %>
    </div>
     <div class="d10-d12 sidebar">
      <%= render 'shared/job_listings' %>
      <%= render 'shared/download_box' %>
    </div>
  </div>
</div>