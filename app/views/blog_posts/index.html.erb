<div class="wrapper blog-posts-wrapper">
  <div class="blog-posts">
    <h1 class="page-title">Blog</h1>
    <% @blog_posts.each do |blog_post| %>
      <div class="blog-post">
        <%= link_to blog_post.title, blog_post_path(blog_post) %>
      </div>
    <% end %>
    <%= paginate @blog_posts %>
  </div>
  <%= render 'shared/recent_posts' %>
</div>