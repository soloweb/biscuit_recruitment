<div class="wrapper blog-posts-wrapper">
  <div class="blog-posts">
    <h1 class="page-title">Blog</h1>
    <% @blog_posts.each do |blog_post| %>
      <div class="blog-post">
        <h3><%= link_to blog_post.title, blog_post_path(blog_post) %></h3>
        <%= raw(blog_post.content[0, 150]) %><%= '...' if blog_post.content.size > 150 %>
        <%= link_to 'Read more', blog_post_path(blog_post) if blog_post.content.size > 150 %>
      </div>
    <% end %>
    <%= paginate @blog_posts %>
  </div>
  <%= render 'shared/recent_posts' %>
</div>